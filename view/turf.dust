<script src="js/alertify/alertify.js"></script>
<script src="js/alertify/alertify-custom.js"></script>

<!-- Custom JS -->
<script src="js/custom.js"></script>

<script type="text/javascript">
    /* 转移湿度调整 */
    function transfer_turf(id) {
        $('#turf_id').val(id);
        $('#turf_name').val($('td.turf_name_' + id).html());
        $('#moisture').val($('td.moisture_' + id).html());
    }

    /* 删除湿度调整 */
    function del_turf(id) {
        reset();
        alertify.confirm("确定删除吗？", function (e) {
            if (e) {
                $.post("/del_turf.do", {
                    id: id
                }, function (result) {
                    if (result.success) {
                        window.location.href = '/turf.html';
                    }
                });
            } else {
                return false;
            }
        });
    }

    jQuery(function($) {
        /* 新增湿度调整 */
        $("#c_turf").click(function() {
            if ($("#turf_name").val() === '') {
                alertify.error("名称不能为空");
                return;
            }
            if ($("#moisture").val() === '') {
                alertify.error("调整%不能为空");
                return;
            }
            $.post("/add_turf.do", {
                name: $("#turf_name").val(),
                moisture: $("#moisture").val()
            }, function (result) {
                if (result.success) {
                    window.location.href = '/turf.html';
                }
            });
        });

        /* 修改湿度调整 */
        $("#u_turf").click(function() {
            if ($("#turf_id").val() === '') {
                alertify.error("请先单击行，选择要修改的湿度");
                return;
            }
            if ($("#turf_name").val() === '') {
                alertify.error("名称不能为空");
                return;
            }
            if ($("#moisture").val() === '') {
                alertify.error("调整%不能为空");
                return;
            }
            $.post("/update_turf.do", {
                id: $("#turf_id").val(),
                name: $("#turf_name").val(),
                moisture: $("#moisture").val()
            }, function (result) {
                if (result.success) {
                    window.location.href = '/turf.html';
                }
            });
        });
    });
</script>
</body>

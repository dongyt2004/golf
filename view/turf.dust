<!-- jquery ScrollUp JS -->
<script src="js/scrollup/jquery.scrollUp.js"></script>

<!-- BS Validations -->
<script src="js/bsvalidator/bootstrapValidator.js"></script>
<script src="js/bsvalidator/custom-validations.js"></script>


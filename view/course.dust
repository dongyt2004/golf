<script type="text/javascript">
    /* 转移球场 */
    function transfer_course(id) {
        $('#course_id').val(id);
        $('#course_name').val($('td.course_name_' + id).html());
        $('#hole_count').val($('td.hole_count_' + id).html());
    }

    /* 删除球场 */
    function del_course(id) {
        reset();
        alertify.confirm("这个操作会把球场中的所有洒水站一并删除，确定删除吗？", function (e) {
            if (e) {
                $.post("/del_course.do", {
                    id: id
                }, function (result) {
                    if (result.success) {
                        location.reload(true);
                    }
                });
            } else {
                return false;
            }
        });
    }

    jQuery(function($) {
        var c = $("#course_name");
        var h = $("#hole_count");
        /* 新增球场 */
        $("#c_course").click(function() {
            if (c.val() === '') {
                alertify.error("球场名称不能为空");
                return;
            }
            if (h.val() === '') {
                alertify.error("球洞数不能为空");
                return;
            }
            $.post("/add_course.do", {
                name: c.val(),
                hole_count: h.val()
            }, function (result) {
                if (result.success) {
                    location.reload(true);
                }
            });
        });

        var ci = $("#course_id");
        /* 修改球场 */
        $("#u_course").click(function() {
            if (ci.val() === '') {
                alertify.error("请先单击行，选择要修改的球场");
                return;
            }
            if (c.val() === '') {
                alertify.error("球场名称不能为空");
                return;
            }
            if (h.val() === '') {
                alertify.error("球洞数不能为空");
                return;
            }
            $.post("/update_course.do", {
                id: ci.val(),
                name: c.val(),
                hole_count: h.val()
            }, function (result) {
                if (result.success) {
                    location.reload(true);
                }
            });
        });
    });
</script>
